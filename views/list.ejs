<% include header %>
    <div class="container mainblock">
        <h2 class="form-signin-heading">聊天室列表</h2>

		<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
		<% for(var i in cate){ %>
		  <div class="panel panel-default">
			<div class="panel-heading" role="tab" id="heading_<%= cate[i].id %>">
			  <h4 class="panel-title">
				<a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= cate[i].id %>" aria-expanded="false" aria-controls="<%= cate[i].id %>">
				 <%= cate[i].cateName %>
				</a>
			  </h4>
			</div>
			<div id="<%= cate[i].id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading_<%= cate[i].id %>">
			  <div class="panel-body">
				<% for(var k in chat){	if(chat[k].cate != cate[i].id) continue; %>

					<a href="/chat/<%= chat[k].id %>"><%= chat[k].room %> (<%= (chat[k].count)?chat[k].count:0 %>)人</a>

				<% } %>
			  </div>
			</div>
		  </div>
		<% } %>
		</div>
    </div>
<% include footer %>





